#!/usr/bin/python3
import re
import subprocess

from common import (
    constants,
    helpers
)

SERVICES = ["ceph-osd",
            "ceph-mon",
            "ceph-mgr",
            "radosgw"]

SVC_VALID_SUFFIX = r"[0-9a-zA-Z-_]*[^:/]?"
CEPH_SERVICES = [r"ceph-[A-Za-z]+",
                 r"rados{}".format(SVC_VALID_SUFFIX),
                 ]
CEPH_INFO = {}


