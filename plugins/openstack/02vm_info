#!/bin/bash -u

declare -a output=()

((VERBOSITY_LEVEL>=1)) || exit 0

vm_indent="  ${INDENT_STR}"

readarray -t uuids<<<`get_ps| grep "product=OpenStack Nova"| sed -r 's/.+uuid=([[:alnum:]\-]+)[\s,]+.+/\1/g'`
for uuid in ${uuids[@]}; do
    output+=( "$uuid" )
done

if ((${#output[@]})); then
    echo "  instances (${#output[@]}):"
    for line in "${output[@]}"; do
        echo "${vm_indent}$line"
    done
else
    echo "  vms:"
    echo "${vm_indent}null"
fi

